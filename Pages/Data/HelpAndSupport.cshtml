@page
@model SkillTrackerApp.Pages.Data.HelpAndSupportModel
@{

    ViewData["Title"] = "Help & Support";
}
<link rel="stylesheet" href="~/css/site.css" />
<style>

    .background-section {
        background-image: url('/img/Help and Support.jpg'); /* Replace with your background image URL */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        padding: 50px 0;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.7); /* Black background with opacity */
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
    }

    .content {
        position: relative;
        z-index: 2;
        color: white;
    }


    .step {
        background-color: #eff5ef;
        border-radius: 35px;
        margin: 30px 0;
        display: flex;
        align-items: center;
    }

    .step-number {
        background-color: #2E7D32;
        color: white;
        padding: 10px 15px;
        border-radius: 35px;
        margin-right: 15px;
        font-size: 24px;
        width: 140px;
        text-align: center;
    }

    .step-text {
        flex: 1;
        color: #2E7D32;
        font-size: 16px;
        padding-left: 22px;
    }

    .contact-us {
        background-color: #f8f9fa;
        padding: 20px 35px;
        border-radius: 5px;
        margin-top: 20px;
    }

        .contact-us h3 {
            text-align: center;
        }

    .spn-sec-lst {
        margin: 30px 0;
    }

        .spn-sec-lst p {
            color: #6C757D;
        }
</style>
<div>
    <div class="background-section">
        <div class="overlay"></div>
        <div class="container content text-center">
            <h1>Help and Support</h1>
            <p>We are here to assist with any issue or question you may have</p>
        </div>
    </div>

    <div class="container mt-5 text-center">
        <h2>Reporting Steps</h2>
    </div>
    <div class="container">
        <div class="mt-4">
            <div class="step">
                <div class="step-number">Step 1</div>
                <div class="step-text">Identify the issue you are facing</div>
            </div>
            <div class="step">
                <div class="step-number">Step 2</div>
                <div class="step-text">Gather relevant information and documentation, Collect any relevant information such as screenshots or descriptions of the problem.</div>
            </div>
            <div class="step">
                <div class="step-number">Step 3</div>
                <div class="step-text">Navigate to the report Options page <a href="/ReportIssue/ReportOptions">Report Options</a> .</div>
            </div>
            <div class="step">
                <div class="step-number">Step 4</div>
                <div class="step-text">Fill in the required details</div>
            </div>
            <div class="step">
                <div class="step-number">Step 5</div>
                <div class="step-text">Submit your report on the submit button</div>
            </div>
            <div class="spn-sec-lst">
                <p>
                    6. Follow Up: After submitting your report, you will get an email with a confirming message.
                </p>
            </div>
            <div class="spn-sec-lst">

                <p>7. To track the status of your report, Go to my reports <a href="/UserReports/User_Reports">My Reports</a>.</p>
            </div>
        </div>

        <div class="contact-us mt-5">
            <h3>Contact Us</h3>
            <p>If you need further assistance, please contact our support team:</p>
            <p class="list-loc">
                <strong>Email:</strong> <i class="bi bi-envelope-fill icon p-1"></i><a style="text-decoration:none;" href="mailto:ehclimatechangeapp@gmail.com">ehclimatechangeapp@gmail.com</a>
            </p>
            <p class="list-loc">
                <strong>Phone:</strong><i class="bi bi-telephone-fill icon p-1"></i><a style="text-decoration:none;" href=" tel:0766169810">(+27) 76 616 9810</a>
            </p>

        </div>
    </div>
</div>
